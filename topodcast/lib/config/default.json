{
  "server": {
    "port": 80,
    "name": "ToPodcast"
  },

  "logger": {
    "name": "ToPodcast",
    "streams": [
      {
        "name": "default",
        "level": "info",
        "type": "rotating-file",
        "path": "logs/default.log",
        "period": "1d",
        "count": 7
      },
      {
        "name": "alert",
        "level": "warn",
        "type": "rotating-file",
        "path": "logs/alert.log",
        "period": "1d",
        "count": 7
      }
    ]
  }
}
